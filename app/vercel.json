{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "crons": [
    {
      "path": "/api/cron/check-delivery",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/check-battery",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/check-signals",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/check-stuck",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/check-reminders",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/cleanup-data",
      "schedule": "0 3 * * 0"
    }
  ]
}
